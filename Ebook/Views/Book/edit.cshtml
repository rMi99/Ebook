@model Book
<div class="container mt-5">
    <h2 class="mb-4">Add a Book</h2>
    <form asp-action="edit" method="post">
        @Html.HiddenFor(Model => Model.Id)
        <div class="mb-3">
            <label for="bookName" class="form-label">Book Name</label>
            <input type="text" class="form-control" id="bookName" name="name" asp-for="Name" >
        </div>
        <div class="mb-3">
            <label for="authorName" class="form-label">Author</label>
            <input type="text" class="form-control" id="authorName" name="author" asp-for="Author" >
        </div>
        <div class="mb-3">
            <label for="isbn" class="form-label">ISBN</label>
            <input type="text" class="form-control" id="isbn" name="isbn" asp-for="Isbn">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>
